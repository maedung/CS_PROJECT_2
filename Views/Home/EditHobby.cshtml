@model Hobby

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Edit a Hobby</h1>
    <div class="register">
    <form asp-action="UpdateHobby" asp-route-id="@Model.id" asp-controller="Home" method="post">

        <span asp-validation-for="name"></span>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" asp-for="name">Name </label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="name" value="@Model.name">
            </div>
        </div>

        <span asp-validation-for="description"></span>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" asp-for="description">Description </label>
            <div class="col-sm-8">
                <textarea class="form-control" name="description" cols="30" rows="10">@Model.description</textarea>
            </div>
        </div>
        
        <br>
        <input type="submit" value="Update">

    </form>
    </div>
</div>
