@model Hobby

@{
    ViewData["Title"] = "Home Page";
}

<div class="text-center">
    <h1>Create a Hobby</h1>
    <div class="register">
    <form asp-action="Posthobby" asp-controller="Home" method="post">

        <span asp-validation-for="name"></span>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" asp-for="name">Name </label>
            <div class="col-sm-8">
                <input class="form-control" asp-for="name">
            </div>
        </div>

        <span asp-validation-for="description"></span>
        <div class="form-group row">
            <label class="col-sm-4 col-form-label" asp-for="description">Description </label>
            <div class="col-sm-8">
                <textarea asp-for="description" class="form-control" cols="30" rows="10"></textarea>
            </div>
        </div>
        
        <br>
        <input type="submit" value="Create">

    </form>
    </div>
</div>
