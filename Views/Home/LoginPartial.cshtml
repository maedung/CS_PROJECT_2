@model LoginUser

@{
    ViewData["Title"] = "Home Page";
}

<div class="partials">
    <div class="register">
        <h1>Login</h1>
        <form asp-action="Login" asp-controller="Home" method="post">

            <span asp-validation-for="login_username"></span>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label" asp-for="login_username">Username </label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="login_username">
                </div>
            </div>

            <span asp-validation-for="login_password"></span>
            <div class="form-group row">
                <label class="col-sm-4 col-form-label" asp-for="login_password">Password </label>
                <div class="col-sm-8">
                    <input class="form-control" asp-for="login_password">
                </div>
            </div>
            
            <br>
            <input type="submit" value="Login">

        </form>
    </div>
</div>
